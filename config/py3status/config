# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 5
}

order += "arch_updates"
# order += "battery all"
order += "battery_level"
order += "disk /"
# order += "load"
# order += "memory"
order += "sysdata"
order += "tztime local"
# order += clock

battery all {
        format = "%status %percentage %remaining"
}

battery_level {
    battery_id = "all"
    format_status_discharging = "🔋"
    format_status_charging = "🔌"
    format_status_degraded = "🪫"
    format_status_bad = "💀"
    notify_low_level = true
    format = "{status} {percent}% {time_remaining}"
}

arch_updates {
    # format = "updates: {total}"
    format = "📦 {total}"
}

disk "/" {
        format = "💾 %avail"
}

load {
        format = "%1min"
}

memory {
        format = "%used / %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # color_good = "#00FF00"
        # format = "%T"
        format = "📅 %Y-%m-%d %H:%M"
}

sysdata {
    format = "🌡 {cpu_temp}{cpu_temp_unit}, 💻 {cpu_used_percent}%, 🐏 {mem_used}{mem_used_unit} / {mem_total}{mem_total_unit}"
}

clock {
    # format = "{Local}"
    format_time = "%Y%m%d %H:%M"
}
